body
	margin   : 0
	overflow : hidden

.draggable
	user-select: none

.scalable
	corner-size = 10px
	min-width  : corner-size
	min-height : corner-size

	.scalable-corner
		width    : 0
		height   : 0
		position : absolute
		bottom   : 0
		right    : 0
		cursor   : se-resize
		box-sizing: border-box
		user-select  : none
		border-style : solid
		border-width : 0 0 corner-size corner-size
		border-color : transparent transparent hsla(0, 0, 50%, 0.5) transparent

#options
	position : absolute
	left     : 0
	top      : 0
	height   : 100px
	width    : 100px
	background-color : hsla(0, 100%, 50%, 0.5)

#response
	padding-top    : 20px
	padding-bottom : 30px
	padding-left   : 50px
	padding-right  : 20px
	height : 'calc(100vh - %s - %s)' % (@padding-top @padding-bottom)
	width  : 'calc(100vw - %s - %s)' % (@padding-left @padding-right)

	// g.plot
		// transform: translate(@padding-left, @padding-top)

	g.x-axis
		transform: 'translate(0, %s)' % (@height)


@import './triangle.styl'

color0 = #fff
color1 = #ddd
color2 = #aaa
color3 = #666
color4 = #000

.clickable
	cursor : pointer

.icon.triangle-left
	triangle-generator(10px, 10px, color3, 'w')

.icon.triangle-right
	triangle-generator(10px, 10px, color3, 'e')

.icon.triangle-up
	triangle-generator(10px, 10px, color3, 'n')

.icon.triangle-down
	triangle-generator(10px, 10px, color3, 's')

.flex-container
	display : flex
	align-items : center
	justify-content : space-between

	.flex-grow
		flex : 1

.flex-container.flex-vertical
	flex-direction : column

.slide-container

	.slide-item
		display : none
		width   : 100%
		height  : 100%

		.slide-title
			display : none

	.slide-item.active
		display : unset

.divider-horizontal
	width  : 100%
	height : 0
	border-bottom-style : solid
	border-bottom-width : 1px

.bold
	font-weight : bold

img
	width      : auto
	height     : auto
	max-width  : 100%
	max-height : 100%
	top        : 50%
	left       : 50%
	transform  : translate(-50%, -50%)
	position   : relative

ul
	padding-left : 20px

body
	width    : 100vw
	height   : 100vh
	margin   : 0
	overflow : hidden

.draggable
	user-select : none

.fill-horizontal
	width : 100%

.fill-vertical
	height : 100%

.scalable
	corner-size = 9px
	min-width  : corner-size
	min-height : corner-size

	.scalable-corner
		triangle-generator(corner-size, corner-size, color3, 'se')
		position : absolute
		bottom   : 0
		right    : 0
		cursor   : se-resize
		user-select : none

plot-dimensions(width, height, top, right, bottom, left)
	padding-top    : top
	padding-right  : right
	padding-bottom : bottom
	padding-left   : left
	width  : 'calc(%s - %s - %s)' % (width  left right )
	height : 'calc(%s - %s - %s)' % (height top  bottom)

#score
	plot-dimensions(100%, 100%, 20px, 20px, 30px, 50px)

	path.line
		fill   : none
		stroke : steelblue
		stroke-linejoin : round
		stroke-linecap  : butt
		stroke-width    : 1.5

#darts
	plot-dimensions(100%, 100%, 10px, 10px, 10px, 10px)
	overflow : hidden

	.r-axis
		circle.scale
			fill   : none
			stroke : color2
			stroke-width : 1
			stroke-dasharray : 5, 7 // perfect spacing

		circle.unit
			@extend #darts .r-axis circle.scale
			stroke : steelblue
			stroke-dasharray : none

		text
			font-size : 8pt
			transform : rotate(-15deg)
			text-anchor : middle

	.t-axis
		line
			@extend #darts .r-axis circle.scale
			stroke-dasharray : 3, 5

	.poles
		polygon
			fill   : crimson
			cursor : move
		polygon:active
			cursor : none

	.zeros
		circle
			r      : 5px
			fill   : limegreen
			cursor : move
		circle:active
			cursor : none

#floaty
	position : absolute
	left     : 0
	top      : 0
	height   : 300px
	width    : 300px
	min-height       : 150px
	min-width        : 150px
	border-width     : 1px
	border-style     : solid
	background-color : hsla(0, 0, 100%, 0.7)

	.draggable.fill-horizontal
		background-color : color1
		// border-bottom-width : inherit
		// border-bottom-style : inherit

	.slide-container
		overflow-y : hidden

	#poles
	#zeros
	#options
		width  : 100%
		height : 100%
		overflow-y : auto

	#options
		label
			display : inline-block

		textarea
			resize : vertical

		textarea
		input[type='text']
		input[type='number']
			width : 100%
			box-sizing : border-box

